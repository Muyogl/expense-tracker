{
  "name": "app",
  "module": "server/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun server/index.ts",
    "dev": "bun --watch server/index.ts",
    "build": "bun run build:frontend",
    "build:frontend": "cd frontend && bun install && bun run build",
    "build:server": "bun build server/index.ts --outdir dist",
    "deploy": "vercel --prod"
  },
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.9.1",
    "vercel": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "hono": "^4.8.3",
    "zod": "^3.25.69"
  }
}
